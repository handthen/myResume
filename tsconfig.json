{
    "root": "true",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2015",
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "sourceRoot": "./",
        "mapRoot": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@": [
                "src"
            ],
        }
    },
    "include": [
        "./src/**/*"
    ]
}