{
    "root": "true",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "esnext",
        "noEmit": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@": ["src"],
        }
    },
    "exclude": [
        "node_modules",
        "config",
        "dist",
        "webpack.prod.ts"
    ],
    "include": [
        "src/*",
        "src/*/*.ts"
, "src/utils/domToImage.ts"    ]
}