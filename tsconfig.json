{
    "root": "true",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "config/*",
        "dist/*"
    ],
    "include": [
        "src/*"
    ]
}